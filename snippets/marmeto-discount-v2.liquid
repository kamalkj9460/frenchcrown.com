            $('.fc_overlay, .fc_popupBox').show();
            $('body').addClass('fc_body');
            sessionStorage.setItem("pobox", true);
          }
        });
        
        $(document).on('click','.close-btn', function(e){
          $('.fc_overlay, .fc_popupBox').hide();
        });
        
